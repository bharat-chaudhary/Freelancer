@model Freelancer.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 p-4">
                <!-- Profile Header -->
                <div class="text-center">
                    <img src="@Model.ProfilePicture" alt="Profile Picture"
                         class="rounded-circle img-thumbnail"
                         style="width: 140px; height: 140px; object-fit: cover; box-shadow: 0 0 10px rgba(0,0,0,0.1);" />

                    <h3 class="mt-3 fw-bold">@Model.Username</h3>
                    <p class="text-muted mb-1"><i class="bi bi-envelope me-1"></i> @Model.Email</p>
                    <span class="badge bg-gradient bg-primary text-light px-3 py-2 fs-6">
                        <i class="bi bi-person-badge me-1"></i> @Model.Role
                    </span>
                </div>

                <hr class="my-4" />

                <!-- User Info -->
                <div class="mb-2">
                    <i class="bi bi-person-fill me-2 text-primary"></i>
                    <strong>Full Name:</strong> @Model.FullName
                </div>

                <div class="mb-2">
                    <i class="bi bi-chat-left-text-fill me-2 text-success"></i>
                    <strong>Bio:</strong> @Model.Bio
                </div>

                <div class="mb-2">
                    <i class="bi bi-telephone-fill me-2 text-info"></i>
                    <strong>Contact:</strong> @Model.ContactNumber
                </div>

                <!-- Edit Profile Button -->
                <div class="text-center mt-4">
                    <a asp-action="EditProfile" class="btn btn-warning px-4 py-2">
                        <i class="bi bi-pencil-square me-1"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
