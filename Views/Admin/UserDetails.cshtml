@model Freelancer.Models.User

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Username</h5>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>Role:</strong> @Model.Role</p>
        <a asp-action="Users" class="btn btn-secondary">Back to Users</a>
    </div>
</div>