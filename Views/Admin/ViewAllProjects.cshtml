@model IEnumerable<Freelancer.Models.Project>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "All Projects";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">All Projects</h2>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Project Title</th>
                <th>Employer</th>
                <th>Budget</th>
                <th>Status</th>
                <th>Start Date</th>
                <th>End Date</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Title</td>
                    <td>@project.User?.Username</td>
                    <td class="text-success">$@project.Budget</td>
                    <td>
                        @if (project.Status == "Open")
                        {
                            <span class="badge bg-success">Open</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Taken</span>
                        }
                    </td>
                    <td>@project.Start_Date.ToString("yyyy-MM-dd")</td>
                    <td>@project.End_Date.ToString("yyyy-MM-dd")</td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
