@model List<Freelancer.Models.Project>

@{
    Layout = "~/Views/Shared/_FreelancerLayout.cshtml";
    ViewData["Title"] = "Completed Projects";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-success fw-bold">
        ✅ Completed Projects
    </h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center shadow-sm rounded-3">
            <i class="bi bi-emoji-frown-fill me-2"></i>You haven't completed any projects yet.
        </div>
    }
    else
    {
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-success text-center">
                        <tr>
                            <th><i class="bi bi-bookmark-fill"></i> Title</th>
                            <th><i class="bi bi-card-text"></i> Description</th>
                            <th><i class="bi bi-cash-stack"></i> Budget</th>
                            <th><i class="bi bi-calendar-check"></i> Start</th>
                            <th><i class="bi bi-calendar-event"></i> End</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model)
                        {
                            <tr class="text-center">
                                <td class="fw-semibold">@project.Title</td>
                                <td class="text-truncate text-muted" style="max-width: 250px;">
                                    @project.Description
                                </td>
                                <td class="text-success fw-bold">@project.Budget.ToString("C")</td>
                                <td>@project.Start_Date.ToString("dd MMM yyyy")</td>
                                <td>@project.End_Date.ToString("dd MMM yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
