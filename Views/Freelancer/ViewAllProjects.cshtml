@model List<Freelancer.Models.Project>

@{
    Layout = "~/Views/Shared/_FreelancerLayout.cshtml";
    ViewData["Title"] = "All Projects";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center text-primary fw-bold">📋 Available Projects</h2>

    <!-- Search Form -->
    <form asp-action="ViewAllProjects" method="get" class="mb-4 d-flex justify-content-end">
        <input type="text" name="searchTerm" class="form-control w-25 me-2 shadow-sm" placeholder="🔍 Search by title or description..." value="@ViewData["searchTerm"]" />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>

    <!-- Project Cards -->
    <div class="row g-4">
        @foreach (var project in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow rounded-4">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-primary mb-1">
                            <i class="bi bi-briefcase-fill me-1"></i>@project.Title
                        </h5>
                        <h6 class="card-subtitle text-muted mb-2">
                            <i class="bi bi-code-slash me-1"></i>Language: @project.Language
                        </h6>
                        <p class="card-text text-secondary small">@project.Description</p>

                        <ul class="list-group list-group-flush small mb-3">
                            <li class="list-group-item border-0 px-0"><strong>💰 Budget:</strong> <span class="text-success">@project.Budget.ToString("C")</span></li>
                            <li class="list-group-item border-0 px-0"><strong>📅 Start Date:</strong> @project.Start_Date.ToString("yyyy-MM-dd")</li>
                            <li class="list-group-item border-0 px-0"><strong>📅 End Date:</strong> @project.End_Date.ToString("yyyy-MM-dd")</li>
                            <li class="list-group-item border-0 px-0">
                                <strong>📝 Status:</strong>
                                @if (project.Status == "Open")
                                {
                                    <span class="badge bg-success">Open</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Taken</span>
                                }
                            </li>
                        </ul>

                        <div class="mt-auto">
                            @if (project.Status == "Open")
                            {
                                <form class="bid-form" method="post" asp-action="TakeProject"
                                      data-project-title="@project.Title"
                                      onsubmit="return confirmBid(event, this);">
                                    <input type="hidden" name="projectId" value="@project.ProjectId" />
                                    <div class="input-group input-group-sm mb-2">
                                        <span class="input-group-text bg-light">₹</span>
                                        <input type="number" step="0.01" name="bidAmount" required class="form-control bid-amount-input" placeholder="Your bid..." />
                                    </div>
                                    <button type="submit" class="btn btn-outline-success btn-sm w-100">
                                        <i class="bi bi-cash-coin me-1"></i>Bid on Project
                                    </button>
                                </form>
                            }
                            else
                            {
                                <p class="text-muted fst-italic text-center">Already Taken</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- ✅ Bootstrap Modal for Success/Error -->
<div class="modal fade" id="statusModal" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0">
            <div class="modal-header text-white" id="modalHeader">
                <h5 class="modal-title" id="statusModalLabel">Status</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body fw-semibold text-dark" id="statusModalBody">
                <!-- Message set by JS -->
            </div>
        </div>
    </div>
</div>

<!-- 🔁 Bid Confirmation Modal -->
<div class="modal fade" id="confirmBidModal" tabindex="-1" aria-labelledby="confirmBidLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="confirmBidLabel">Confirm Your Bid</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body fw-semibold text-dark">
                <p>Project: <span id="confirmProjectTitle" class="fw-bold text-primary"></span></p>
                <p>Your Bid: ₹<span id="confirmBidAmount" class="fw-bold text-success"></span></p>
                <p class="text-muted small fst-italic">Are you sure you want to place this bid?</p>
            </div>
            <div class="modal-footer justify-content-end">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmBidBtn">Confirm Bid</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        let selectedForm = null;

        function confirmBid(event, form) {
            event.preventDefault();
            selectedForm = form;

            const title = form.getAttribute("data-project-title");
            const amount = form.querySelector(".bid-amount-input").value;

            if (!amount || parseFloat(amount) <= 0) {
                alert("Please enter a valid bid amount.");
                return false;
            }

            document.getElementById("confirmProjectTitle").textContent = title;
            document.getElementById("confirmBidAmount").textContent = amount;

            const modal = new bootstrap.Modal(document.getElementById("confirmBidModal"));
            modal.show();

            return false;
        }

        document.getElementById("confirmBidBtn").addEventListener("click", function () {
            if (selectedForm) {
                selectedForm.submit();
            }
        });

        window.onload = function () {
            const success = '@TempData["SuccessMessage"]';
            const error = '@TempData["ErrorMessage"]';

            if (success || error) {
                const modalTitle = document.getElementById('statusModalLabel');
                const modalBody = document.getElementById('statusModalBody');
                const modalHeader = document.getElementById('modalHeader');
                const modal = new bootstrap.Modal(document.getElementById('statusModal'));

                if (success) {
                    modalTitle.textContent = "✅ Bid Placed";
                    modalHeader.classList.add("bg-success");
                    modalBody.textContent = success;
                } else if (error) {
                    modalTitle.textContent = "⚠️ Error";
                    modalHeader.classList.add("bg-danger");
                    modalBody.textContent = error;
                }

                modal.show();
            }
        };
    </script>
}
