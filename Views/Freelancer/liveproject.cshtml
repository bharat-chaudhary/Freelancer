@model List<Freelancer.Models.Project>

@{
    Layout = "~/Views/Shared/_FreelancerLayout.cshtml";
    ViewData["Title"] = "My Live Projects";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center text-primary fw-bold">
        🚀 My Live Projects
    </h2>

    @if (Model != null && Model.Count > 0)
    {
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>📌 Title</th>
                            <th>💰 Budget</th>
                            <th>📅 Deadline</th>
                            <th>⚙️ Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model)
                        {
                            <tr class="text-center">
                                <td class="fw-semibold text-dark">@project.Title</td>
                                <td class="text-success fw-bold">@project.Budget.ToString("C")</td>
                                <td>@project.End_Date.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <form asp-action="CompleteProject" method="post">
                                            <input type="hidden" name="projectId" value="@project.ProjectId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-check-circle-fill me-1"></i>Complete
                                            </button>
                                        </form>

                                        <a href="@Url.Action("Index", "Task", new { projectId = project.ProjectId })" class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-eye-fill me-1"></i>View
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center shadow-sm mt-4">
            <i class="bi bi-emoji-frown-fill me-2"></i>No live projects assigned yet.
        </div>
    }
</div>
