@{
    Layout = "~/Views/Shared/_EmployerLayout.cshtml";
    ViewData["Title"] = "Bid Approved";
}

<div class="container d-flex flex-column align-items-center justify-content-center mt-5">

    <div class="card shadow-sm border-0 rounded-4 p-4 text-center" style="max-width: 600px; width: 100%;">
        <div class="card-body">
            <h2 class="text-success mb-3">
                <i class="bi bi-check-circle-fill me-2"></i>Bid Approved
            </h2>

            <p class="lead mb-4">
                The bid has been approved successfully, and the project has been marked as
                <span class="badge bg-primary">Taken</span>.
            </p>

            <a href="@Url.Action("ViewBids", "Employer", new { projectId = ViewData["ProjectId"] })"
               class="btn btn-outline-primary">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to Bids
            </a>
        </div>
    </div>
</div>
