@model List<Freelancer.Models.Bid>

@{
    Layout = "~/Views/Shared/_EmployerLayout.cshtml";
    ViewData["Title"] = "Approve Bids";
    var projectTitle = ViewBag.ProjectTitle as string;
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">
        <i class="bi bi-card-checklist me-2"></i>@projectTitle - Bids
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["NoBids"] != null)
    {
        <div class="alert alert-info shadow-sm">
            <i class="bi bi-info-circle-fill me-2"></i>@TempData["NoBids"]
        </div>
    }

    <a asp-action="ViewAllProjects" class="btn btn-outline-secondary mb-3">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to My Projects
    </a>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>Email</th>
                            <th>Bid Amount</th>
                            <th>Bid Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bid in Model)
                        {
                            <tr class="align-middle text-center">
                                <td>@(bid.User?.Email ?? "-")</td>
                                <td class="text-success fw-semibold">@bid.BidAmount.ToString("C")</td>
                                <td>@bid.Bid_Date.ToString("dd MMM yyyy")</td>
                                <td>
                                    @if (bid.Assign == "Yes")
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </td>
                                <td>
                                    @if (bid.Assign == "No")
                                    {
                                        <form asp-action="ApproveBid"
                                              asp-controller="Project"
                                              method="post" class="d-inline">
                                            <input type="hidden" name="bidId" value="@bid.Bid_ID" />
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="bi bi-check2-circle me-1"></i> Approve
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Already Approved</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
