@model IEnumerable<Freelancer.Models.Project>

@{
    Layout = "~/Views/Shared/_EmployerLayout.cshtml";
    ViewData["Title"] = "All Projects";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary text-center"><i class="bi bi-folder2-open me-2"></i>My Projects</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["NoBids"] != null)
    {
        <div class="alert alert-warning shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["NoBids"]
        </div>
    }

    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Language</th>
                            <th>Budget</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Status</th>
                          
                            <th>Bids</th>
                            <th>Payment</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model)
                        {
                            <tr class="align-middle text-center">
                                <td class="text-start fw-semibold">@project.Title</td>
                                <td>@project.Description</td>
                                <td>@project.Language</td>
                                <td class="text-success">@project.Budget.ToString("C")</td>
                                <td>@project.Start_Date.ToString("dd MMM yyyy")</td>
                                <td>@project.End_Date.ToString("dd MMM yyyy")</td>
                                <td>
                                    @if (project.Status == "Open")
                                    {
                                        <span class="badge bg-success">Open</span>
                                    }
                                    else if (project.Status == "InProgress")
                                    {
                                        <span class="badge bg-warning text-dark">In Progress</span>
                                    }
                                    else if (project.Status == "Completed")
                                    {
                                        <span class="badge bg-secondary">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">@project.Status</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="ViewBids"
                                       asp-route-projectId="@project.ProjectId"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-binoculars"></i> View Bids
                                    </a>
                                </td>
                                <td>
                                    @if (project.Status == "Completed")
                                    {
                                        <a asp-controller="Payment"
                                           asp-action="InitiatePayment"
                                           asp-route-projectId="@project.ProjectId"
                                           class="btn btn-sm btn-success">
                                            <i class="bi bi-credit-card-fill me-1"></i> Pay Now
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Not Available</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
