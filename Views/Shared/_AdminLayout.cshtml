@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username") ?? "Guest";
    var profileImage = HttpContextAccessor.HttpContext.Session.GetString("ProfileImage") ?? "/images/contacts_16076050.png";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Custom Styling -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        /* Navbar Styling */
        .navbar .dropdown-toggle img {
            border: 2px solid transparent;
            transition: 0.3s ease-in-out;
        }

        .navbar .dropdown-toggle:hover img {
            border-color: #ffc107;
            transform: scale(1.1); /* Scale-up effect */
        }

        .navbar-brand img {
            filter: drop-shadow(1px 1px 1px rgba(0,0,0,0.2));
            transition: transform 0.3s ease, filter 0.3s ease;
        }

        .navbar-brand:hover {
            transform: translateX(5px); /* Subtle slide effect */
            filter: drop-shadow(3px 3px 5px rgba(0, 0, 0, 0.3)); /* Enhanced shadow on hover */
        }

        /* Navbar Link Hover Effect */
        .nav-link.active, .nav-link:hover {
            color: #ffc107 !important;
            background-color: rgba(255, 193, 7, 0.1); /* Light yellow background */
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
            transform: scale(1.05);
        }

        /* Profile Dropdown Hover Effects */
        .dropdown-menu .dropdown-item {
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .dropdown-menu .dropdown-item:hover {
                background-color: #ffc107; /* Yellow background on hover */
                color: #212529; /* Darker text */
            }

        /* Navbar Brand Hover Effect */
        .navbar-brand:hover {
            color: #ffc107 !important;
            filter: drop-shadow(3px 3px 5px rgba(0, 0, 0, 0.3)); /* Added shadow */
            transform: translateX(5px); /* Subtle slide effect */
            transition: transform 0.3s ease, filter 0.3s ease;
        }

        /* Toggler button effect */
        .navbar-toggler:hover {
            background-color: #ffc107; /* Change color on hover */
            border-color: #ffc107;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2); /* Added shadow */
        }

        footer {
            padding: 1rem 0;
            background-color: #343a40;
            color: #ccc;
            text-align: center;
            margin-top: 50px;
        }

        /* Profile Image and Text Styling */
        .dropdown-menu .dropdown-item i {
            transition: transform 0.3s ease;
        }

        .dropdown-menu .dropdown-item:hover i {
            transform: rotate(15deg); /* Rotate icon on hover */
        }
    </style>
</head>
<body>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center">
                <img src="~/images/freelancer-icon.png" asp-append-version="true" alt="Logo" width="45" height="40" class="me-2">
                <span class="fw-bold fs-5">Freelancer</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Centered Navigation Links -->
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Admin")"><i class="bi bi-house-door me-1"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Users", "Admin")"><i class="bi bi-people me-1"></i> Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AuditLogs", "Admin")"><i class="bi bi-journal-text me-1"></i> Audit Logs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ViewAllProjects", "Admin")">
                            <i class="bi bi-clipboard-check me-1"></i> View All Projects
                        </a>
                </ul>

                <!-- Profile Dropdown -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center text-white" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="@profileImage" alt="Profile" class="rounded-circle me-2" width="35" height="35" />
                            <span>@username</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="profileDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")"><i class="bi bi-person-circle me-1"></i> Profile</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")"><i class="bi bi-box-arrow-right me-1"></i> Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Body -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
   

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
