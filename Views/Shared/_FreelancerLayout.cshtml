@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username") ?? "Guest";
    var profileImage = HttpContextAccessor.HttpContext.Session.GetString("ProfileImage") ?? "/images/contacts_16076050.png";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Freelancer Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        .navbar .dropdown-toggle img {
            border: 2px solid #fff;
            transition: 0.3s ease-in-out;
        }

        .navbar .dropdown-toggle:hover img {
            border-color: #ffc107;
        }

        .navbar-nav .nav-link {
            font-size: 1.1rem;
            padding: 0.5rem 1.2rem;
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #ffc107;
            }

        .navbar-nav .nav-item {
            margin-right: 1rem;
        }

        .profile-dropdown-menu {
            min-width: 200px;
        }

        .navbar-nav .dropdown-menu {
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

        .navbar-nav .nav-item .dropdown-menu a {
            padding: 0.8rem 1.5rem;
        }

            .navbar-nav .nav-item .dropdown-menu a:hover {
                background-color: #f8f9fa;
            }

        .navbar .navbar-toggler-icon {
            background-color: #ffc107;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand d-flex align-items-center">
                <img src="~/images/freelancer-icon.png" asp-append-version="true" alt="Freelancer Logo" width="50" height="40" class="me-2" />
                <span class="fw-bold">Freelancer</span>
            </a>

            <!-- Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar content -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Centered links -->
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Freelancer")">
                            <i class="bi bi-house-door-fill me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ViewAllProjects", "Freelancer")">
                            <i class="bi bi-clipboard-check me-1"></i> View All Projects
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("LiveProject", "Freelancer")">
                            <i class="bi bi-play-circle-fill me-1"></i> Live Projects
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ProjectHistory", "Freelancer")">
                            <i class="bi bi-clock-history me-1"></i> Project History
                        </a>
                    </li>
                </ul>

                <!-- Profile dropdown -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="@profileImage" alt="Profile" class="rounded-circle" width="35" height="35" />
                            <span class="ms-2">@username</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end profile-dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Profile", "Freelancer")">
                                    <i class="bi bi-person-circle me-2"></i> Profile
                                </a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 🔧 FIXED: Allow views to render script sections -->
    @RenderSection("Scripts", required: false)
</body>
</html>
