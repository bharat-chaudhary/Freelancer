@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username") ?? "Guest";
    var profileImage = HttpContextAccessor.HttpContext?.Session.GetString("ProfilePicture") ?? "/images/contacts_16076050.png";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Employer Panel</title>

    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .navbar .dropdown-toggle img {
            border: 2px solid #fff;
            transition: 0.3s ease-in-out;
        }

        .navbar .dropdown-toggle:hover img {
            border-color: #ffc107;
        }

        .nav-link {
            transition: all 0.3s ease-in-out;
            position: relative;
        }

            .nav-link:hover {
                color: #ffc107 !important;
                transform: scale(1.05);
            }

            .nav-link:before {
                content: '';
                position: absolute;
                width: 100%;
                height: 2px;
                background-color: #ffc107;
                bottom: 0;
                left: 0;
                transform: scaleX(0);
                transform-origin: bottom right;
                transition: transform 0.3s ease-out;
            }

            .nav-link:hover:before {
                transform: scaleX(1);
                transform-origin: bottom left;
            }

        .dropdown-item:hover {
            background-color: #f8f9fa;
            transition: background-color 0.2s ease;
        }

        .navbar-brand img {
            filter: drop-shadow(0 0 2px rgba(255, 255, 255, 0.5));
        }

        .dropdown-item {
            padding: 10px 20px;
        }

        .navbar-nav .nav-item.active .nav-link {
            color: #ffc107 !important;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3 shadow-sm">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Dashboard", "Employer")">
                <img src="~/images/freelancer-icon.png" asp-append-version="true" alt="Freelancer Logo" width="45" height="38" class="me-2" />
                <span class="fw-bold fs-5">Freelancer</span>
            </a>

            <!-- Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Nav Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Dashboard", "Employer")">
                            <i class="bi bi-speedometer2 me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("NewProject", "Project")">
                            <i class="bi bi-plus-circle me-1"></i> New Project
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("ViewAllProjects", "Project")">
                            <i class="bi bi-clipboard-data me-1"></i> All Projects
                        </a>
                    </li>
                </ul>

                <!-- Profile Dropdown -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center text-white" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="@profileImage" alt="Profile" class="rounded-circle" width="35" height="35" onerror="this.src='/images/contacts_16076050.png';" />
                            <span class="ms-2">@username</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="profileDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Profile", "Employer")">
                                    <i class="bi bi-person-circle me-2"></i> Profile
                                </a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
