@model Freelancer.Models.ProjectTask
@{
    Layout = "~/Views/Shared/_FreelancerLayout.cshtml";
    ViewData["Title"] = "Delete Task";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Task</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Due Date</dt>
                <dd class="col-sm-9">@Model.DueDate?.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Completion Date</dt>
                <dd class="col-sm-9">@Model.CompletionDate?.ToString("yyyy-MM-dd")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TaskId" />
                <div class="alert alert-warning">
                    Are you sure you want to delete this task?
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
